<UserControl x:Class="YouAreHeard.UserControls.DoctorSidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Background="Transparent" VerticalAlignment="Stretch">
        <Border
            CornerRadius="20"
            Height="auto"
            Background="White"
            Margin="4,4,4,4"
            BorderThickness="0">
            <Button 
                Content="Bảng điều khiển của bác sĩ" 
                Height="40"
                BorderThickness="0"
                Foreground="Black"
                FontWeight="Bold"
                Background="Transparent"/>
        </Border>
        <Border
            CornerRadius="20"
            Height="auto"
            Background="#415AFA"
            Margin="4,4,4,4"
            BorderThickness="0">
            <Button 
                Content="Cuộc hẹn sắp tới" 
                Height="40"
                BorderThickness="0"
                Foreground="White"
                FontWeight="Bold"
                Cursor="Hand"
                Background="Transparent"
                Click="AppointmentClick"/>
        </Border>

        <Border
            CornerRadius="20"
            Height="auto"
            Background="#415AFA"
            Margin="4,4,4,4"
            BorderThickness="0">
            <Button 
                Content="Xét nghiệm" 
                Height="40"
                BorderThickness="0"
                Foreground="White"
                FontWeight="Bold"
                Cursor="Hand"
                Background="Transparent"
                Click="TestClick"/>
        </Border>

        <Border
            CornerRadius="20"
            Height="auto"
            Background="#415AFA"
            Margin="4,4,4,4"
            BorderThickness="0">
            <Button 
                Content="Điều trị" 
                Height="40"
                BorderThickness="0"
                Foreground="White"
                FontWeight="Bold"
                Cursor="Hand"
                Background="Transparent"
                Click="TreatmentClick"/>
        </Border>
    </StackPanel>
</UserControl>
