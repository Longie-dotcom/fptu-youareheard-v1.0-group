<Window x:Class="YouAreHeard.MainWindow"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouAreHeard"
        mc:Ignorable="d"
        Title="YouAreHeard Medical Application" Width="400" Height="600">
    <Grid Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel 
            Orientation="Vertical" 
            VerticalAlignment="Center" 
            Grid.Row="0" 
            Margin="0, 40, 0, 40">
            <Image Source="/Assets/logo-picture.png" Height="120" Width="120" />
            <TextBlock
                Text="Đăng nhập vào tài khoản"
                TextAlignment="Center"
                FontSize="25"
                Margin="0, 15, 0, 0"
                Foreground="Black" FontWeight="Bold" />
        </StackPanel>

        <!-- Body -->
        <StackPanel 
            Grid.Row="1"
            Orientation="Vertical"
            VerticalAlignment="Center">
            <StackPanel Width="300" Margin="0, 2, 0, 10">
                <TextBlock 
                    Text="Địa chỉ email" 
                    Margin="0,10,0,10"
                    FontSize="15"
                    FontWeight="SemiBold" />

                <Grid>
                    <Rectangle 
                        RadiusX="8" RadiusY="8"
                        Stroke="Black" StrokeThickness="1.4"
                        StrokeDashArray="4,2"
                        Fill="White"/>
                    <TextBox 
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Height="40"
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalContentAlignment="Center"/>
                </Grid>
            </StackPanel>


            <StackPanel Width="300" Margin="0, 2, 0, 10">
                <TextBlock 
                    Text="Nhập mật khẩu" 
                    Margin="0,10,0,10"
                    FontSize="15"
                    FontWeight="SemiBold" />

                <Grid>
                    <Rectangle 
                        RadiusX="8" RadiusY="8"
                        Stroke="Black" StrokeThickness="1.4"
                        StrokeDashArray="4,2"
                        Fill="White"/>
                    <PasswordBox 
                        x:Name="PasswordTextBox"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="5"
                        Height="40"
                        FontSize="14"
                        VerticalContentAlignment="Center"/>
                </Grid>
            </StackPanel>

        </StackPanel>

        <!-- Footer -->
        <StackPanel
            Grid.Row="3"
            Margin="0,40, 0, 80"
            Orientation="Vertical"
            VerticalAlignment="Center">
            <Border 
                CornerRadius="17.5"
                Background="#415AFA"
                Width="200"
                Height="35">
                <Button 
                    Content="Đăng nhập"
                    Command="{Binding LoginCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="15"
                    Padding="10,5"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
